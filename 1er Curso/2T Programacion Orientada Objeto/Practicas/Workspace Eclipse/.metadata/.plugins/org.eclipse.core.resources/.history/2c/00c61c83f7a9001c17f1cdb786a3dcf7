package Sessio1;

import javax.swing.*;
import java.util.*;
import java.awt.*;

public class casella extends JPanel {


	public casella() {
		super();
		this.setBlack();
	}

	public void setGreen() {
		this.setBackground(Color.green);
	}
	
	public void setBlack() {
		this.setBackground(Color.black);
	}
	
	
	public boolean getViu() {
		if (this.getBackground() == Color.green) {
			return true;
		} else return false;
	}
	
	public boolean getMort() {
		if (this.getBackground() == Color.black) {
			return true;
		} else return false;
	}
	

}
