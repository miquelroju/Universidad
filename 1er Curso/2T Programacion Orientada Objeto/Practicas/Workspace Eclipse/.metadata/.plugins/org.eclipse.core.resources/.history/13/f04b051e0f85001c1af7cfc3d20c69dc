package Practica1Sessio2;
import java.util.Random;

public class Taulell {
	
	private boolean [][] taulell;
	private int files;
	private int columnes;
	private int vius;
	
	public Taulell (int files, int columnes) {
		this.taulell = new boolean [files][columnes];
		this.files = files;
		this.columnes = columnes;
		this.vius = 0;
	}
	
	public void treureVida() {
		for(int i=0; i<this.files; i++) {
			for(int j=0; j<this.columnes; j++) {
				this.taulell[i][j] = false;
			}
		}
		this.vius=0;
	}
	
	public void posarVida(int N) {
		int rand_files, rand_columnes;
		Random random = new Random();
		rand_files = random.nextInt(this.files);
		rand_columnes = random.nextInt(this.columnes);
		for(int i=0; i<N; i++) {
			while(this.taulell[rand_files][rand_columnes]==true) {
				taulell[rand_files][rand_columnes]=true;
				rand_files = random.nextInt(this.files);
				rand_columnes = random.nextInt(this.columnes);
				this.vius++;				
			}
		}
	}
	
	public void posarVida(int N) {
		Random r = new Random();
		for (int i=0; i<N; i++) {
			int rand_fil, rand_col;
			do {
				rand_fil = r.nextInt(t.length);
				rand_col = r.nextInt(t[0].length);
			} while (t[fil][col] == true);
		}
	}
	
	public void mostraTaulell() {
		for(int x=0;x<this.files; x++) {
			for(int y=0; y<this.columnes; y++) {
				if (taulell[x][y]) {
					System.out.print('X');
				}
				else {
					System.out.print('O');
				}
				System.out.print(' ');
			}
			System.out.println("");
		}
	}
	
	public boolean ferGeneracio() {
		boolean aux[][]=new boolean[this.files][this.columnes];
		copiar(aux);
		for(int x=0;x<this.files; x++) {
			for(int y=0; y<this.columnes; y++) {
				int veins=quantesVeines(x, y);
				boolean casella=this.taulell[x][y];
				if(veins==2) {
					aux[x][y] = casella;
				}
				
				else if (veins==3) {
					aux[x][y]=true;
				}
				
				if(aux[x][y]) {
					this.vius+=1;
				}

			}
		}
		if(aux!=this.taulell) {
			return true;
		} else return false;
	}

	private int quantesVeines(int fil, int col) {
		int veins=0;
		for(int x=-1; x<=1; x++) {
			if (fil+x>=0 && (fil+x)<this.files) {
				for(int y=-1; y<=1; y++) {
					if ( !(y==0 && x==0) ) {
						if (col+y>=0 && (col+y)<this.columnes) {
							if (taulell[fil+x][col+y]) veins++;
						}
					}
				}
			}
		}
		return veins;
	}
	
	private void copiar(boolean [][] origen) {
		boolean [][] taulellAux;
		taulellAux = origen;
		for(int i=0; i<this.files; i++) {
			for(int j=0; j<this.columnes; j++) {
				taulellAux[i][j] = origen[i][j];
			}
		}
	}
	
	public boolean[][] getTaulell() {
		return this.taulell;
	}
	
	public int getFiles() {
		return this.files;
	}
	
	public int getColumnes() {
		return this.columnes;
	}
	
	public int getVius() {
		return this.vius;
	}

}
